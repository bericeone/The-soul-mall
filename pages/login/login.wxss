/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background-color: #000;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  background-color: #000;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.nav-title {
  height: 44px;
  line-height: 44px;
  text-align: center;
  color: #fff;
  font-size: 17px;
  font-weight: 500;
}

/* 顶部图片容器 */
.logo-container {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  margin-top: calc(44px + env(safe-area-inset-top));
}

.logo {
  width: 100%;
  height: 100%;
}

/* 登录表单 */
.login-form {
  width: 90%;
  background: #1a1a1a;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.1);
  margin-top: -60rpx;
  position: relative;
  z-index: 1;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 输入框组 */
.input-group {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #333;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #fff;
}

.input::placeholder {
  color: #666;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #333;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 40rpx 0;
  border: none;
}

.login-btn:active {
  background: #444;
}

/* 其他选项 */
.options {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.option-text {
  font-size: 26rpx;
  color: #999;
}
